<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Hyperlink?>

<?import javafx.scene.control.ProgressIndicator?>
<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ForgotPasswordController">
    <padding>
        <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
    </padding>
    <children>
        <Label text="Forgot Your Password?">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label text="Enter your email address and we'll send you a code to reset your password." textAlignment="CENTER" wrapText="true" />
        <TextField fx:id="emailField" maxWidth="300.0" promptText="Enter your email address" />
        <Button fx:id="sendCodeButton" onAction="#handleSendCode" style="-fx-background-color: #d51e1e; -fx-text-fill: white;" text="Send Reset Code">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
        <ProgressIndicator fx:id="loadingIndicator" prefHeight="50.0" prefWidth="50.0" visible="false" />
        <Hyperlink onAction="#handleGoBack" text="&lt; Back to Login" />
    </children>
</VBox>