<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ManageUniversitiesController">
    <top>
        <VBox alignment="TOP_CENTER">
            <StackPane alignment="CENTER" prefHeight="70.0" style="-fx-background-color: #ff3131;">
                <children>
                    <Label text="NextStepUni" textFill="WHITE">
                        <font>
                            <Font name="Bookman Old Style Bold" size="56.0" />
                        </font>
                    </Label>
                </children>
            </StackPane>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color: #d51e1e;">
                <children>
                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/images/icons/home.png" />
                        </image>
                        <HBox.margin>
                            <Insets left="20.0" />
                        </HBox.margin>
                    </ImageView>
                </children>
            </HBox>
        </VBox>
    </top>

    <left>
        <VBox alignment="TOP_LEFT" BorderPane.alignment="CENTER">
            <children>
                <ImageView fx:id="backArrow" onMouseClicked="#handleBackArrowClick" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@/images/icons/arrow.png" />
                    </image>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </ImageView>
            </children>
            <BorderPane.margin>
                <Insets left="20.0" top="20.0" />
            </BorderPane.margin>
        </VBox>
    </left>

    <center>
        <VBox alignment="TOP_CENTER" spacing="15.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="50.0" top="20.0" />
            </padding>
            <children>
                <Label text="Manage Universities">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Button fx:id="addButton" contentDisplay="GRAPHIC_ONLY" onAction="#handleAddUniversity" style="-fx-background-color: transparent; -fx-padding: 5;">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@/images/icons/add_icon.png" />
                                    </image>
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </ImageView>
                            </graphic>
                        </Button>

                        <StackPane HBox.hgrow="ALWAYS">
                            <children>
                                <TextField fx:id="searchField" prefHeight="30.0" promptText="Search for universities..." style="-fx-border-radius: 5; -fx-background-radius: 5;" />
                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="CENTER_RIGHT">
                                    <image>
                                        <Image url="@/images/icons/search_icon.png" />
                                    </image>
                                    <StackPane.margin>
                                        <Insets right="10.0" />
                                    </StackPane.margin>
                                </ImageView>
                            </children>
                        </StackPane>
                        <Label text="Sort by:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="sortComboBox" prefWidth="150.0" />
                    </children>
                </HBox>
                <TableView fx:id="universityTableView" style="-fx-border-color: #cccccc;" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="nameColumn" prefWidth="250.0" text="University Name" />
                        <TableColumn fx:id="locationColumn" prefWidth="150.0" text="Location" />
                        <TableColumn fx:id="deadlineColumn" prefWidth="120.0" text="Deadline" />
                        <TableColumn fx:id="websiteColumn" prefWidth="100.0" text="Website" />
                        <TableColumn fx:id="actionColumn" prefWidth="100.0" text="Action" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>
</BorderPane>
