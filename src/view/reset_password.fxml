<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="15.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ResetPasswordController">
    <padding>
        <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
    </padding>
    <children>
        <Label text="Reset Your Password">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label text="Please enter the code from the email and your new password." />
        <TextField fx:id="emailField" maxWidth="300.0" promptText="Confirm your email address" />
        <TextField fx:id="codeField" maxWidth="300.0" promptText="Reset Code" />
        <PasswordField fx:id="newPasswordField" maxWidth="300.0" promptText="New Password" />
        <PasswordField fx:id="confirmPasswordField" maxWidth="300.0" promptText="Confirm New Password" />
        <Button onAction="#handleResetPassword" style="-fx-background-color: #d51e1e; -fx-text-fill: white;" text="Reset Password">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
    </children>
</VBox>
