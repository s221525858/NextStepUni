<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.Cursor?>
<BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ViewBursariesController">
    <top>
        <VBox alignment="TOP_CENTER" prefWidth="800.0" BorderPane.alignment="CENTER">
            <children>
                <StackPane alignment="CENTER" prefHeight="70.0" style="-fx-background-color: #ff3131;">
                    <children>
                        <Label text="NextStepUni" textFill="WHITE">
                            <font>
                                <Font name="Britannic Bold" size="50.0" />
                            </font>
                        </Label>
                    </children>
                </StackPane>
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color: #d51e1e;">
                    <children>
                        <ImageView fx:id="homeButton" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@/images/icons/home.png" />
                            </image>
                            <HBox.margin>
                                <Insets left="20.0" />
                            </HBox.margin>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </ImageView>
                        <HBox HBox.hgrow="ALWAYS" />

                        <StackPane>
                            <children>
                                <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLoginRegister" style="-fx-background-color: white; -fx-background-radius: 5;" text="Login/Register">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>

                                <MenuButton fx:id="profileButton" contentDisplay="GRAPHIC_ONLY" managed="false" mnemonicParsing="false" style="-fx-background-color: transparent;" visible="false">
                                    <items>
                                        <MenuItem mnemonicParsing="false" onAction="#handleViewProfile" text="View Profile" />
                                        <MenuItem mnemonicParsing="false" onAction="#handleLogout" text="Logout" />
                                    </items>
                                    <graphic>
                                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@/images/icons/profile_icon.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </MenuButton>
                            </children>
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </StackPane>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
            </padding>
            <children>
                <HBox alignment="CENTER" spacing="10.0" prefWidth="900.0">
                    <children>
                        <Button onAction="#handleBackClick"
                                style="-fx-background-color: #d51e1e; -fx-text-fill: white; -fx-font-weight: bold;"
                                text="Back">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="View Bursaries">
                            <font>
                                <Font name="Bodoni MT Condensed Bold" size="27.0" />
                            </font>
                        </Label>

                        <Region HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <StackPane>
                            <children>
                                <TextField fx:id="searchField" prefHeight="27.0" prefWidth="352.0"
                                           promptText="Search for bursaries..."
                                           style="-fx-border-radius: 5; -fx-background-radius: 5; -fx-border-color: #000000;" />
                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true"
                                           StackPane.alignment="CENTER_RIGHT">
                                    <image>
                                        <Image url="@/images/icons/search_icon.png" />
                                    </image>
                                    <StackPane.margin>
                                        <Insets right="10.0" />
                                    </StackPane.margin>
                                </ImageView>
                            </children>
                        </StackPane>
                        <Label text="Sort by:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="sortComboBox" prefWidth="150.0" />
                    </children>
                </HBox>

                <HBox alignment="CENTER_LEFT" maxWidth="900.0"
                      style="-fx-border-color: #cccccc; -fx-border-width: 0 0 2 0;">
                    <padding>
                        <Insets bottom="8.0" left="10.0" top="8.0" />
                    </padding>
                    <children>
                        <Label prefWidth="350.0" style="-fx-font-weight: bold;" text="Bursary Name" />
                        <Label prefWidth="200.0" style="-fx-font-weight: bold;" text="DeadLine" />
                        <Label alignment="CENTER" prefWidth="150.0" style="-fx-font-weight: bold;" text="Website" />
                        <Label prefWidth="200.0" />
                    </children>
                </HBox>

                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" maxWidth="900.0"
                            style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="bursaryContainer" style="-fx-background-color: #ffffff;" />
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </center>
</BorderPane>